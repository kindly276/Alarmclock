<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/borderlayout" >

    <TextView
        android:id="@+id/txtalarmname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/alarm"
        android:textSize="@dimen/normal_snooze_button" />

    <View
        android:id="@+id/idview1"
        style="@style/Divider5"
        android:layout_below="@+id/txtalarmname" />

    <LinearLayout
        android:id="@+id/layoutgom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idview1"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/txtsnoozefor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AlarmSnooze"
            android:textSize="@dimen/normal_snooze_title" />

        <com.thao.alarmclock.CustomDigitalClock2
            android:layout_marginLeft="@dimen/normal_margintop_one"
            android:id="@+id/txttimemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_snooze_title" />
    </LinearLayout>

    <com.thao.alarmclock.DigitalClockm
        android:id="@+id/analogClock1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutgom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/normal_canhtruoc_ngaythang"
        android:textColor="#00BFFF"
        android:textSize="@dimen/normal_ngaythang" />

    <com.thao.alarmclock.MyTextView
        android:id="@+id/txttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/analogClock1"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/normal_sizetime"
        android:text="00:00:00"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/normal_snooze_time" />

    <View
        android:id="@+id/divider8"
        style="@style/Divider5"
        android:layout_above="@+id/linear" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_size45"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtcancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/changestate"
            android:gravity="center"
            android:text="@string/CANCEL" />
    </LinearLayout>

</RelativeLayout>