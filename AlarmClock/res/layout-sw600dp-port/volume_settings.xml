<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/txtvolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sw600_seettingtop_snooze"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/sw600_settingsize_snooze" />

    <SeekBar
        android:id="@+id/seek2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtvolume"
        android:layout_margin="@dimen/sw600_snooze_title"
        android:layout_marginTop="@dimen/sw600_padding_item"
        android:max="100"
        android:secondaryProgress="20" />

    <View
        android:id="@+id/divider8"
        style="@style/Divider"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/seek2" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sw600_size45"
        android:layout_below="@+id/divider8"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtsave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/changestate"
            android:gravity="center"
            android:text="@string/save" />

        <View
            android:id="@+id/View01"
            style="@style/Divider1" />

        <TextView
            android:id="@+id/txtCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/changestate"
            android:gravity="center"
            android:text="@string/CANCEL" />
    </LinearLayout>

</RelativeLayout>