<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TimePicker
        android:id="@+id/alarm_details_time_picker"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_size150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/normal_margintop_one" />

    <View
        android:id="@+id/divider8"
        android:layout_below="@+id/alarm_details_time_picker"
        style="@style/Divider" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_size45"
        android:layout_below="@+id/divider8"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtsave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/changestate"
            android:gravity="center"
            android:text="@string/save" />

        <View
            android:id="@+id/View01"
            style="@style/Divider1" />

        <TextView
            android:id="@+id/txtCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/changestate"
            android:gravity="center"
            android:text="@string/CANCEL" />
    </LinearLayout>

</RelativeLayout>